{
    "name": "seo-generator/content-generator",
    "description": "WordPress SEO Content Generator Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SEOGenerator\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SEOGenerator\\Tests\\": "tests/php/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    }
}
